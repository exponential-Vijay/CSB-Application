*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Inter';
}
body {
 background: #03428E !important;
}
nav {
    padding-left: 1rem;
    padding-top: 2rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
}
.back-btn {
    height: 40px;
    width: 40px;
    background: transparent;
    border: 1px solid #ffffff3b;
    align-content: center;
    text-align: center;
    border-radius: 6px;
}
.back-btn span i {
    color: #FFFFFF;
}
.logo img {
    width: 12rem;
}
.content p {
    padding-left: 1rem;
    padding-top: 2rem;
    color: #FFFFFF;
    font-size: 20px;
    font-weight: 800;
}
.main-content {
    margin-top: 2rem;
    background: #FFFFFF;
    height: 778px;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
}
.signInWith {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: .5rem 1rem;
    height: 100px;
    width: 100%;
}

.signInWith h4, .signInWith h5 {
    font-size: 13px;
    font-weight: 600;
    border-bottom: 4px solid #03428E;
    padding-bottom: 22px;
}

.signInWith h5 {
    border: 0px;
}
.phone-input {
    display: flex;
    align-items: center;
    border: 1px solid  transparent;
    border-radius: 5px;
    overflow: hidden;
    margin: 0 1rem;
    box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
}

.country-code {
    background-color: transparent;
    padding: 12px;
    font-size: 15px;
    color: #00000073;
    border-right: 1px solid #ccc;
}

.phone-number {
    flex: 1;
    padding: 12px;
    font-size: 16px;
    border: none;
    outline: none;
}

.phone-number::placeholder {
    color: #aaa;
}

.btns {
    width: 100%;
    height: 50px;
    align-content: center;
    text-align: center;
}
.otp-btn {
   font-weight: 500;
   font-size: 13px;
   color: #9AA0AC;
   border: 0px;
   background: transparent;
  }
  .login-button {
    width: 100%;
    align-content: center;
    text-align: center;
    background: #DCE1EA;
    height: 56px;
    border-radius: 6px;
  }
  .login-button button {
    font-size: 14px;
    font-weight: 500;
    color: #9AA0AC;
    background: transparent;
    border: 0;
  }
  .buttons {
    padding:  0 1rem;
  }
  .face-btn {
    margin-top: .8rem;
    background: transparent;
    border: 1px solid #E0E0E0;
  }
  .face-btn span {
     font-size: 13px;
     font-weight: 400;
     margin-left: .2rem;
     color: #152644;
  }
 .createAccount {
    height: 180px;
    text-align: center;
    align-content: center;
 }
 .createAccount a {
    font-size: 14px;
    font-weight: 500;
    color: #03428E;
    text-decoration: none;
 }
 .policy-section {
    background: #FFFFFF;
    height: 69px;
    text-align: center;
 }
 .policy-section span i {
    font-size: 12px;
    font-weight: 500;
    color: #152644;
 }
 .secure-login {
    font-size: 10px;
    font-weight: 500;
    color: #152644;
 }

 @media only screen and (max-width:1800px) {
    .main-content {
        height: 100%;
    }
 }